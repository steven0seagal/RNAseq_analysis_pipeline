/*
========================================================================================
    RNAseq Analysis Pipeline - Nextflow Configuration
========================================================================================
    Main configuration file for the RNA-seq analysis pipeline
    Supports: Standard RNA-seq, circRNA analysis, and Multimodal genomics
----------------------------------------------------------------------------------------
*/

// Pipeline manifest
manifest {
    name            = 'RNAseq_analysis_pipeline'
    author          = 'Bioinformatics Team'
    homePage        = 'https://github.com/username/RNAseq_analysis_pipeline'
    description     = 'Comprehensive RNA-seq differential expression analysis pipeline with circRNA and multimodal support'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=23.04.0'
    version         = '2.0.0'
}

// Global default params
params {
    // ===== INPUT/OUTPUT =====
    input                      = null
    outdir                     = 'results'

    // Analysis mode: 'rnaseq', 'circrna', 'multimodal', or 'integrated'
    mode                       = 'rnaseq'

    // ===== REFERENCE GENOME =====
    genome                     = 'GRCh38'
    genome_fasta               = 'data/reference/GRCh38.primary_assembly.genome.fa'
    annotation_gtf             = 'data/reference/gencode.v38.primary_assembly.annotation.gtf'
    star_index                 = null  // Will be generated if not provided
    bwa_index                  = null  // For circRNA analysis

    // Reference databases (for variant calling)
    dbsnp                      = null
    known_indels               = null

    // miRNA reference (for circRNA analysis)
    mirna_fasta                = 'data/reference/mature_mirna.fa'

    // ===== GENERAL PARAMETERS =====
    read_length                = 100
    single_end                 = false

    // ===== TRIMMING PARAMETERS =====
    min_trimmed_length         = 25
    adapter_fwd                = null  // Auto-detection by default
    adapter_rev                = null
    quality_cutoff             = 20

    // ===== ALIGNMENT PARAMETERS =====
    aligner                    = 'star'  // 'star' or 'bwa' (for circRNA)
    sjdb_overhang              = 99  // read_length - 1
    star_two_pass              = false  // Enable for variant calling

    // ===== QUANTIFICATION PARAMETERS =====
    quantifier                 = 'featurecounts'  // 'featurecounts' or 'salmon'
    strand_specificity         = 2  // 0=unstranded, 1=forward, 2=reverse
    feature_type               = 'exon'
    gene_attribute             = 'gene_id'

    // ===== DIFFERENTIAL EXPRESSION =====
    analysis_tool              = 'deseq2'  // 'deseq2' or 'pydeseq2'
    padj_threshold             = 0.05
    log2fc_threshold           = 1.0
    min_base_mean              = 10

    // Metadata for DE analysis
    metadata                   = 'config/metadata.tsv'
    control_condition          = 'Healthy'
    treatment_condition        = 'Cancer'

    // ===== FUNCTIONAL ENRICHMENT =====
    run_enrichment             = true
    go_analysis                = true
    kegg_analysis              = true
    organism                   = 'hsa'  // human

    // ===== CIRCRNA PARAMETERS =====
    circrna_tool               = 'ciriquant'  // 'ciriquant' or 'ciri2'
    min_circrna_reads          = 2

    // ===== VARIANT CALLING PARAMETERS =====
    call_variants              = false
    variant_caller             = 'mutect2'  // 'mutect2' for somatic
    tumor_sample               = null
    normal_sample              = null

    // ===== SMALL RNA PARAMETERS =====
    analyze_small_rna          = false
    min_small_rna_length       = 18
    max_small_rna_length       = 25

    // ===== SKIP OPTIONS =====
    skip_fastqc                = false
    skip_trimming              = false
    skip_multiqc               = false
    skip_deseq2                = false

    // ===== MULTIQC =====
    multiqc_config             = null
    multiqc_title              = 'RNA-Seq Analysis Report'

    // ===== COMPUTATIONAL RESOURCES =====
    max_cpus                   = 16
    max_memory                 = '128.GB'
    max_time                   = '240.h'

    // ===== OTHER =====
    publish_dir_mode           = 'copy'
    email                      = null
    help                       = false
    validate_params            = true
    show_hidden_params         = false
    schema_ignore_params       = 'genomes'

    // ===== CONFIG FILES =====
    custom_config_version      = 'master'
    custom_config_base         = null
    config_profile_name        = null
    config_profile_description = null
    config_profile_contact     = null
    config_profile_url         = null
}

// Load base configuration
includeConfig 'conf/base.config'

// Load module configurations
includeConfig 'conf/modules.config'

// Profiles
profiles {
    debug {
        dumpHashes              = true
        process.beforeScript    = 'echo $HOSTNAME'
        cleanup                 = false
    }

    conda {
        conda.enabled           = true
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }

    mamba {
        conda.enabled           = true
        conda.useMamba          = true
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }

    docker {
        docker.enabled          = true
        docker.userEmulation    = true
        conda.enabled           = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }

    arm {
        docker.runOptions       = '-u $(id -u):$(id -g) --platform=linux/amd64'
    }

    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
        conda.enabled           = false
        docker.enabled          = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }

    podman {
        podman.enabled          = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }

    test      { includeConfig 'conf/test.config'      }
    test_full { includeConfig 'conf/test_full.config' }
}

// Export these variables to prevent local Python/R libraries from conflicting
env {
    PYTHONNOUSERSITE = 1
    R_PROFILE_USER   = "/.Rprofile"
    R_ENVIRON_USER   = "/.Renviron"
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

// Defaults for resources
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max memory '${params.max_memory}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max time '${params.max_time}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min( obj, params.max_cpus as int )
        } catch (all) {
            println "   ### ERROR ###   Max cpus '${params.max_cpus}' is not valid! Using default value: $obj"
            return obj
        }
    }
}

// Set container registry
if (workflow.containerEngine == 'singularity' && !params.singularity_pull_docker_container) {
    docker.registry = 'quay.io'
}

// Function to ensure that resource requirements don't go beyond a maximum limit
def check_resource_labels(process_label) {
    def Map resource_labels = [
        'process_single': [cpus: 1, memory: 6.GB, time: 4.h],
        'process_low': [cpus: 2, memory: 12.GB, time: 4.h],
        'process_medium': [cpus: 6, memory: 36.GB, time: 8.h],
        'process_high': [cpus: 12, memory: 72.GB, time: 16.h],
        'process_long': [cpus: 2, memory: 12.GB, time: 20.h],
        'process_high_memory': [cpus: 2, memory: 200.GB, time: 16.h],
        'error_ignore': [errorStrategy: 'ignore'],
        'error_retry': [errorStrategy: 'retry', maxRetries: 2]
    ]
    return resource_labels[process_label]
}

// Set timeline, report, and trace
def trace_timestamp = new java.util.Date().format('yyyy-MM-dd_HH-mm-ss')
timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${trace_timestamp}.html"
}
report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${trace_timestamp}.html"
}
trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${trace_timestamp}.txt"
}
dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${trace_timestamp}.html"
}

// Function to generate process-specific resource requirements
def get_process_resources(task_name, label) {
    // Default resources based on label
    def base_resources = check_resource_labels(label)

    // Process-specific adjustments
    def process_overrides = [
        'STAR_GENOMEGENERATE': [cpus: 12, memory: 40.GB, time: 4.h],
        'STAR_ALIGN': [cpus: 8, memory: 40.GB, time: 8.h],
        'GATK4_BASERECALIBRATOR': [cpus: 2, memory: 16.GB, time: 8.h],
        'GATK4_APPLYBQSR': [cpus: 2, memory: 16.GB, time: 8.h],
        'GATK4_MUTECT2': [cpus: 4, memory: 16.GB, time: 12.h]
    ]

    return process_overrides.containsKey(task_name) ? process_overrides[task_name] : base_resources
}
